generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model User {
  id             Int       @id @default(autoincrement())
  name           String
  email          String    @unique
  password       String
  role           String    @default("member")
  albums         Album[]
  comments       Comment[]
  uploadedPhotos Photo[]   @relation("UserUploadedPhotos")
  createdAt      DateTime  @default(now())
}

model Album {
  id          Int      @id @default(autoincrement())
  title       String
  description String?
  user        User     @relation(fields: [userId], references: [id])
  userId      Int
  photos      Photo[]
  createdAt   DateTime @default(now())
}

model Photo {
  id           Int       @id @default(autoincrement())
  title        String
  description  String?
  imageUrl     String
  album        Album     @relation(fields: [albumId], references: [id])
  albumId      Int
  uploadedBy   User      @relation("UserUploadedPhotos", fields: [uploadedById], references: [id])
  uploadedById Int
  comments     Comment[]
  createdAt    DateTime  @default(now())
}

model Comment {
  id        Int      @id @default(autoincrement())
  content   String
  user      User     @relation(fields: [userId], references: [id])
  userId    Int
  photo     Photo    @relation(fields: [photoId], references: [id])
  photoId   Int
  createdAt DateTime @default(now())
}
